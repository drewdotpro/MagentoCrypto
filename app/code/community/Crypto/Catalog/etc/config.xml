<?xml version="1.0"?>
<config>
    <modules>
        <Crypto_Catalog>
            <version>1.0.0</version>
        </Crypto_Catalog>
    </modules>
    <global>
        <blocks>
            <cryptocatalog>
                <class>Crypto_Catalog_Block</class>
            </cryptocatalog>
        </blocks>
        <models>
            <catalog>
                <rewrite>
                    <layer_filter_price_algorithm>Crypto_Catalog_Model_Layer_Filter_Price_Algorithm</layer_filter_price_algorithm>
                    <resource_product_collection>Crypto_Catalog_Model_Resource_Product_Collection</resource_product_collection>
                </rewrite>
            </catalog>
            <cryptocatalog>
                <class>Crypto_Catalog_Model</class>
            </cryptocatalog>
        </models>
        <resources>
            <cryptocatalog_setup>
                <setup>
                    <module>Crypto_Catalog</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </cryptocatalog_setup>
            <cryptocatalog_write>
                <connection>
                  <use>core_write</use>
                </connection>
            </cryptocatalog_write>
            <cryptocatalog_read>
               <connection>
                <use>core_read</use>
              </connection>
            </cryptocatalog_read>
        </resources>
    </global>
    <default />
</config>